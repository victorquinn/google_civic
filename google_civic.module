<?php

/**
 * @file Google Civic module
 * Responsible for Google Civic Drupal hook implementations.
 */

/**
 * Implements Drupal's hook_menu().
 */
function google_civic_menu() {
  $items['admin/settings/google_civic'] = array(
    'title' => 'Google Civic Settings',
    'page callback' => 'drupal_get_form',
    'page arguments' => array('google_civic_settings_form'),
    'access arguments' => array('administer google civic'),
    'description' => t('Google Civic API settings'),
    'file' => 'google_civic.admin.inc',
    'type' => MENU_NORMAL_ITEM,
  );

  /**
   * coderev-google_civic
   * Change the page callback to google_civic_wheredoivote
   * And similarly change the file name to .wheredoivote.inc, and the permission
   * voterinfo overlaps with the API call, which can get confusing
   * Finally the type for this menu item should be MENU_CALLBACK, because we
   * don't want it to appear in navigational menus automatically.
   */
  $items['google_civic/wheredoivote'] = array(
    'title' => 'Where do I vote?',
    'page callback' => 'google_civic_voterinfo',
    'access arguments' => array('view google civic voterinfo'),
    'file' => 'google_civic.voterinfo.inc',
    'description' => t('Find your polling place'),
  );

  return $items;
}

/**
 * Implements Drupal's hook_perm().
 */
function google_civic_perm() {
  $perms = array(
    'administer google civic',
    'view google civic voterinfo'
  );

  return $perms;
}

/**
 * Implements Drupal's hook_block().
 */
function google_civic_block($op = 'list', $delta = 0, $edit = array()) {
  module_load_include('inc', 'google_civic', 'google_civic.block');

  switch ($op) {
    case 'list':
      return google_civic_block_list();
    case 'configure':
    case 'save':
      break;
    case 'view':
      return google_civic_block_view($delta);
    default:
      break;
  }
}

/**
 * Implements Drupal's hook_theme().
 */
function google_civic_theme($existing, $type, $theme, $path) {
  $tpls_dir = drupal_get_path('module', 'google_civic') . '/tpls';

  
  /**
   * coderev-google_civic
   * the theme hooks should be separated with all underscores below (e.g.
   * google_civic_block_address) and the templates should be separated with
   * all hyphens (e.g. google-civic-block-adress)
   * Finally change the "voterinfo" thing to "wheredoivote".
   */
  $templates = array(
    'google_civic-block-address' => array(
      'arguments' => array(
        'address_form' => '',
      ),
      'path' => $tpls_dir,
      'template' => 'google_civic-block-address',
    ),
    'google_civic-voterinfo' => array(
      'arguments' => array(
        'title' => '',
        'locations' => '',
        'map' => '',
        'election_info_link' => '',
        'election_date' => '',
        'extra_data' => '',
      ),
      'path' => $tpls_dir,
      'template' => 'google_civic-voterinfo',
    ),
  );

  return $templates;
}

/** Form wrapping */

/**
 * @see _google_civic_address_form (google_civic.forms.inc).
 */
function google_civic_address_form() {
  module_load_include('inc', 'google_civic', 'google_civic.forms');
  return _google_civic_address_form();
}

